{
  "name": "spectrum-vscode-theme",
  "displayName": "Spectrum Theme",
  "icon": "icon.png",
  "version": "0.4.0",
  "license": "MIT",
  "preview": true,
  "publisher": "alexperronnet",
  "author": "Alex Perronnet <alex@alexperronnet.io> (https://alexperronnet.io)",
  "description": "Spectrum theme, a clean and juicy dark theme for VS Code. Fully based on Tailwindcss V2 colors",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "spectrum",
    "vscode",
    "themes",
    "light",
    "dark"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Spectrum",
        "uiTheme": "vs-dark",
        "path": "./themes/spectrum.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexperronnet/spectrum-vscode-theme"
  },
  "bugs": {
    "url": "https://github.com/alexperronnet/spectrum-vscode-theme/issues"
  },
  "scripts": {
    "start": "nodemon --watch src src/index.js",
    "build": "node src/index.js",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "devDependencies": {
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.2"
  }
}
